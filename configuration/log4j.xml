<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM ".\log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="null" debug="null">
  <appender name="sys" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="log/trade.log"/>
    <param name="BufferedIO" value="false"/>
    <param name="BufferSize" value="8192"/>
    <param name="Encoding" value="UTF-8"/>
    <!-- #Buffer单位为字节，默认是8K，IO BLOCK大小默认也是8K  -->
    <param name="DatePattern" value="'.'yyyy-MM-dd"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-6p [%-10c{1}] %m%n"/>
    </layout>
  </appender>
  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    <param name="Threshold" value="debug"/>
    <param name="Encoding" value="UTF-8"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-6p [%-10c{1}] %m%n"/>
    </layout>
  </appender>
  <logger name="com.pingan.b2bic.Config" additivity="true">
    <level value="debug"/>
  </logger>
  <logger name="com.pingan.b2bic.Util" additivity="true">
    <level value="info"/>
  </logger>
  <logger name="com.pingan.b2bic.Exception" additivity="true">
    <level value="debug"/>
  </logger>
  <logger name="com.pingan.b2bic.Http" additivity="true">
    <level value="debug"/>
  </logger>
  <logger name="com.pingan.b2bic.sign" additivity="true">
    <level value="debug"/>
  </logger>
    <logger name="com.pingan.b2bic.B2BICUtils" additivity="true">
    <level value="info"/>
  </logger>
  <logger name="org.apache.commons.httpclient" additivity="true">
    <level value="info"/>
  </logger>
  <root>
    <level value="error"/>
    <appender-ref ref="sys"/>
    <appender-ref ref="stdout"/>
  </root>
</log4j:configuration>
